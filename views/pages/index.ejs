</head>
<header>
    <%- include('../partials/header') %>
</header>

<body>
    <main class="">
        <div class="jumbotron jumbotron-fluid">

            <div class="m-4 align-items-center justify-content-center row-sm-12">

                <div class="text-center">
                    <h1 class="text-success">FUZZY SEARCH</h1>
                </div>

                <hr />
                <!-- Form View -->
                <form method="POST" action="/search">
                    <div class="justify-items-center block align-items-center mt-3">
                        <div class="row">
                            <div class="col-xl-1 col-sm-12">
                                <label for="realtime">Data</label>
                                <select id="realtime" name="realtime" class="form-control">
                                    <option value="realtime">Realtime</option>
                                    <option value="cache">Cache</option>
                                </select>
                            </div>
                            <div class="col-xl-1 col-sm-12">
                                <label>Threshold</label>
                                <input class="form-control" type="number" step="any" name="threshold" required />
                                <p>Range 0.1 - 1</p>
                            </div>
                            <div class="col-xl-1 col-sm-12">
                                <label>Distance</label>
                                <input type="range" class="form-range" name="distance" min="10" max="100" id="distanceRange" value="0"
                                oninput="this.form.distanceOut.value=this.value">
                                <output id="distanceOut" name="distanceOut" for="distanceRange">0</output>
                            </div>
                            <div class="col-xl-4 col-sm-12">
                                <label>Secret Code</label>
                                <input class="form-control" type="text" name="auth" />
                            </div>
                            <div class="col-xl-4 col-sm-12">
                                <label>Keyword</label>
                                <input class="form-control" type="text" name="keyword" />
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" value="submit" class="mt-3 btn btn-primary btn-md btn-block">Cari
                            </button>
                        </div>
                        <div>
                        </div>
                    </div>
                </form>

            </div>
        </div>

        <script src="js/bootstrap.bundle.min.js">
            function updateTextInput(val) {
          document.getElementById('textInput').value=val; 
        }
        </script>
</body>
<footer>
    <%- include('../partials/footer') %>
</footer>

</html>